                  <h3 class="text-lg font-bold text-gray-900 mb-2 tracking-tight">{{ club.name }}</h3>
                  <p class="text-sm text-gray-600 line-clamp-3 mb-4 leading-relaxed tracking-tight">{{ club.description }}</p>
