                  <div class="mb-4 bg-red-50 border border-red-200 rounded-lg p-3">
                    <div class="flex items-start">
                      <span class="text-red-600 mr-2">‚ùå</span>
                      <div class="flex-1">
                        <p class="text-xs font-semibold text-red-800">Request Rejected</p>
                        @if (club.reviewComment) {
                          <p class="text-xs text-red-700 mt-1">{{ club.reviewComment }}</p>
                        }
                      </div>
                    </div>
                  </div>
                }
                
                <!-- Category and Status Badges -->
                <div class="mb-4 flex flex-wrap gap-2">
                  <span [class]="'inline-flex items-center px-3 py-1.5 text-xs font-bold rounded-full tracking-wide uppercase ' + getCategoryBadgeClass(club.category)">
                    {{ club.category }}
                  </span>
                  <span [class]="'inline-flex items-center px-3 py-1.5 text-xs font-bold rounded-full tracking-wide uppercase ' + getStatusBadgeClass(club.status)">
                    @if (club.status === ClubStatus.PENDING) {
                      ‚è≥ PENDING
                    } @else if (club.status === ClubStatus.APPROVED) {
                      ‚úÖ APPROVED
                    } @else if (club.status === ClubStatus.REJECTED) {
                      ‚ùå REJECTED
                    }
                  </span>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-2">
                  <button
                    (click)="openDetailsView(club)"
                    class="flex-1 px-4 py-2.5 text-sm font-semibold text-white bg-gradient-to-r from-[#2D5757] to-[#3D3D60] rounded-lg hover:shadow-lg transition-all duration-300 transform hover:scale-105"
                  >
                    <span class="mr-1">üëÅÔ∏è</span> View Details
                  </button>
                  @if (isClubCreator(club)) {
                    <button
                      (click)="openEditModal(club)"
                      class="px-4 py-2.5 text-sm font-semibold text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-all duration-300"
                      title="Edit"
                    >
                      ‚úèÔ∏è
                    </button>
                    <button
                      (click)="deleteClub(club.id!)"
                      class="px-4 py-2.5 text-sm font-semibold text-red-600 bg-red-50 rounded-lg hover:bg-red-100 transition-all duration-300"
                      title="Delete"
                    >
                      üóëÔ∏è
                    </button>
                  } @else {
                    <button
                      (click)="leaveClub(club.id!)"
                      class="px-4 py-2.5 text-sm font-semibold text-red-600 bg-red-50 rounded-lg hover:bg-red-100 transition-all duration-300"
                      title="Leave Club"
                    >
                      üö™
                    </button>
                  }
                </div>
              </div>
            </div>
          }
        </div>
      } @else {
        <div class="bg-white rounded-xl p-12 text-center shadow-sm">
          @if (selectedCategory !== null) {
            <span class="text-6xl mb-4 block">{{ getCategoryIcon(selectedCategory) }}</span>
