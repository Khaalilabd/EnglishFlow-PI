                  <div class="flex items-center justify-between relative z-10">
                    <span class="text-4xl">{{ getCategoryIcon(club.category) }}</span>
                    <span class="px-3 py-1.5 bg-white rounded-full text-sm font-bold text-gray-700 shadow-md">
                      {{ club.currentMembersCount || 0 }}/{{ club.maxMembers }}
