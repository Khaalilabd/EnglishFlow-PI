{
  "dashboard": {
    "title": "Auth Service Monitoring - Working",
    "tags": ["auth", "monitoring"],
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Login Failures (Total)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "auth_login_failure_total",
            "refId": "A",
            "datasource": {"type": "prometheus", "uid": "cfdtz4as9m8zkd"}
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 30, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Login Failure Rate (per minute)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "rate(auth_login_failure_total[5m]) * 60",
            "refId": "A",
            "legendFormat": "Failed Logins/min",
            "datasource": {"type": "prometheus", "uid": "cfdtz4as9m8zkd"}
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "showPoints": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Failed Logins/min"},
              "properties": [
                {"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}
              ]
            }
          ]
        },
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"},
          "tooltip": {"mode": "single"}
        }
      },
      {
        "id": 3,
        "title": "HTTP Requests (Total)",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(http_server_requests_seconds_count)",
            "refId": "A",
            "datasource": {"type": "prometheus", "uid": "cfdtz4as9m8zkd"}
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "blue"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "HTTP Request Rate",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 16, "x": 8, "y": 8},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count[5m])",
            "refId": "A",
            "legendFormat": "{{method}} {{uri}} ({{status}})",
            "datasource": {"type": "prometheus", "uid": "cfdtz4as9m8zkd"}
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "showPoints": "auto"
            }
          }
        },
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"},
          "tooltip": {"mode": "multi"}
        }
      },
      {
        "id": 5,
        "title": "Memory Usage (%)",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{area=\"heap\"} / jvm_memory_max_bytes{area=\"heap\"} * 100",
            "refId": "A",
            "datasource": {"type": "prometheus", "uid": "cfdtz4as9m8zkd"}
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 75, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 6,
        "title": "Registrations (Total)",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 14},
        "targets": [
          {
            "expr": "auth_registration_total",
            "refId": "A",
            "datasource": {"type": "prometheus", "uid": "cfdtz4as9m8zkd"}
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Total Users",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 14},
        "targets": [
          {
            "expr": "auth_users_total",
            "refId": "A",
            "datasource": {"type": "prometheus", "uid": "cfdtz4as9m8zkd"}
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "blue"}
              ]
            }
          }
        }
      }
    ]
  },
  "overwrite": true
}
